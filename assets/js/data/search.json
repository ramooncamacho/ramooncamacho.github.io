---
layout: compress
swcache: true
---

[
  {% for article in site.articles %}
    {%- capture description -%}
      {% include post-description.html article=article %}
    {%- endcapture -%}
  {
    "title": {{ article.title | jsonify }},
    "url": {{ article.url | relative_url | jsonify }},
    "categories": {{ article.categories | join: ', ' | jsonify }},
    "tags": {{ article.tags | join: ', ' | jsonify }},
    "date": "{{ article.date }}",
    "content": "{{ description | strip_newlines | strip }}"
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
